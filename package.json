  "license": "MIT",
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": [
      "ts-node/register"
    ]
  },
  "bugs": {
    "url": "https://github.com/greg-finley/add-one-letter/issues"
  },
  "homepage": "https://github.com/greg-finley/add-one-letter#readme",
  "dependencies": {
    "axios": "0.21.1",
    "ts-node": "10.0.0",
    "typescript": "4.3.2"
  },
  "devDependencies": {
    "@types/chai": "4.2.18",
    "@types/mocha": "8.2.2",
    "@types/node": "15.6.1",
    "chai": "4.3.4",
    "mocha": "8.4.0",
    "npm-run-all": "4.1.5"
  }
